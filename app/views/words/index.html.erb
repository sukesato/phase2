 <section class="main-header">
    <%= image_tag "achieve.png" %>
  </section>
  
<h1>投稿一覧</h1>

<p><%= notice %></p>
<div class = "table">
<table>
  <tr>
    <th>内容</th>
  </tr>

<% @words.each do |word| %>
  <tr>
    <td><%= word.content %></td>
    
    <td><%= link_to '詳細を確認する', word_path(word.id) , class: "btn btn-info "%></td>
    <td><%= link_to '投稿を編集する', edit_word_path(word.id),class: "btn btn-info ", data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to '投稿を削除する', word_path(word.id),  method: :delete ,class: "btn btn-info ",data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to '新規投稿を行う', new_word_path %>
</div>

